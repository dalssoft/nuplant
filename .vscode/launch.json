    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "node",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.js"
        },
        {
            "name": "Specs",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "spec"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**/*.js"
            ],
            "type": "node"
        },
    ]
}