{
    "name": "nuplant",
    "version": "1.0.0",
    "description": "recurring billing software",
    "main": "src/index.js",
    "scripts": {
        "start": "node --inspect src/index.js",
        "start:dev": "nodemon --exec \"npm test && npm start\"",
        "lint": "npx eslint \"**/*.{js,jsx}\" --quiet",
        "lint:fix": "npx eslint \"**/*.{js,jsx}\" --fix",
        "db:migrate": "npx knex --knexfile knexFile.js migrate:latest",
        "db:rollback": "npx knex --knexfile knexFile.js migrate:rollback",
        "db:runSeeds": "npx knex --knexfile knexFile.js seed:run",
        "db:clean": "node ./src/infra/data/clean.js",
        "db:reset": "npm run db:clean && npm run db:migrate && npm run db:runSeeds",
        "docker:run": "docker-compose up --build",
        "docker:run:db": "docker-compose up --build db",
        "test": "npm run spec",
        "spec": "herbs spec"
    },
    "keywords": [
        "herbs"
    ],
    "author": "davidlojudicesobrinho",
    "license": "MIT",
    "dependencies": {
        "@herbsjs/herbarium": "^1.5.0",
        "@herbsjs/herbs": "^2.1.0-beta.6",
        "@herbsjs/herbs2gql": "^3.1.0-beta.1",
        "@herbsjs/herbs2knex": "2.1.1-beta.2",
        "@herbsjs/herbs2rest": "4.1.0-beta.8",
        "@herbsjs/herbsshelf": "^5.1.0-beta.5",
        "apollo-server": "^3.8.2",
        "apollo-server-express": "^3.8.2",
        "cors": "^2.8.5",
        "deepmerge": "^4.2.2",
        "dotenv": "^16.0.1",
        "express": "^4.18.1",
        "graphql": "^16.5.0",
        "graphql-scalars": "^1.17.0",
        "graphql-tools": "^8.2.12",
        "knex": "^2.4.2",
        "lodash.camelcase": "^4.3.0",
        "mocha": "^10.0.0",
        "nodemon": "^2.0.19",
        "pg": "^8.7.3",
        "sugar-env": "^1.5.14"
    },
    "devDependencies": {
        "eslint": "^8.39.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1"
    }
}
